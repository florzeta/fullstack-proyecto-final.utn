<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{usuario}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar
                sesion<i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de publicaciones</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/publicaciones/agregar"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th clas="text-end" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each publicaciones}}
                    <tr>
                        <th scope="row">{{id_publicacion}}</th>
                        <td scope="col">{{titulo}}</td>
                        <td scope="col">{{{imagen}}}</td>
                        <td scope="col">
                            <a class="btn btn-secondary" href="/admin/publicaciones/modificar/{{id_publicacion}}"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/publicaciones/eliminar/{{id_publicacion}}"><i
                                    class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>